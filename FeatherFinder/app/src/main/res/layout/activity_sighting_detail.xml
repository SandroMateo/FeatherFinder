<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sighting_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.featherfinder.ui.SightingDetailActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/background2"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/sightingImageView"/>

    <TextView
        android:text="Audio"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_music_note_black_24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:id="@+id/sightingCallTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/sightingImageView"
        android:layout_toEndOf="@+id/sightingImageView" />

    <TextView
        android:text="Location"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:id="@+id/sightingLocationTextView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/sightingCallTextView"
        android:layout_alignLeft="@+id/sightingCallTextView"
        android:layout_alignStart="@+id/sightingCallTextView" />

    <TextView
        android:text="TextView"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sightingSpeciesTextView"
        android:layout_below="@+id/sightingImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/sightingDescriptionTextView"
        android:layout_below="@+id/sightingSpeciesTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:id="@+id/sightingDetailsTextView"
        android:layout_below="@+id/sightingDescriptionTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Message Bird Spotter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/messageSpotterButton" />

    <TextView
        android:text="TextView"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sightingDescriptionTextView"
        android:layout_alignRight="@+id/sightingLocationTextView"
        android:layout_alignEnd="@+id/sightingLocationTextView"
        android:id="@+id/sightingTimestampTextView" />
</RelativeLayout>
